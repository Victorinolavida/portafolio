---
import '../styles/global.css'
import Photo from '../../public/photo.jpg'

interface Props {
    title: string
    description: string
    image?: string
}

const { title, description, image = '/blog-placeholder-1.jpg' } = Astro.props

const SITE_URL = import.meta.env.PUBLIC_SITE_URL
const TWITTER_URL = import.meta.env.PUBLIC_TWITTER_URL
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link
    rel="icon"
    type="image/svg+xml"
    href="/favicon-white.svg"
    media="(prefers-color-scheme: light)"
/>
<link
    rel="icon"
    type="image/svg+xml"
    href="/favicon-dark.svg"
    media="(prefers-color-scheme: dark)"
/>
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link
    rel="preload"
    href="/fonts/atkinson-regular.woff"
    as="font"
    type="font/woff"
    crossorigin
/>
<link
    rel="preload"
    href="/fonts/atkinson-bold.woff"
    as="font"
    type="font/woff"
    crossorigin
/>

<!-- Canonical URL -->
<link rel="canonical" href={SITE_URL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Twitter -->
<meta property="twitter:card" content="My personal Twitter" />
<meta property="twitter:url" content={TWITTER_URL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<!-- <meta property="twitter:image" content={new URL(image, Astro.url)} /> -->

<!-- Metadata for SEO -->
<!-- Open Graph Meta Tags (for Facebook, LinkedIn, etc.) -->
<meta property="og:title" content="Victorino Lavida | Portfolio" />
<meta
    property="og:description"
    content="Victorino Lavida's portfolio, blog, and resume."
/>
<meta property="og:image" content={Photo.src} />
<!-- Thumbnail image -->
<meta property="og:url" content={SITE_URL} />
<meta property="og:type" content="website" />

<meta
    name="keywords"
    content="Victorino Lavida, Victorino, Lavida, Victorino Lavida Portfolio, Victorino Lavida Blog, Victorino Lavida Projects, Victorino Lavida Resume"
/>
<meta
    name="keywords"
    content="Konfio, ex-konfio,konfio, strade,cicada, Cicada, fintech, Fintech, dev, developer, web developer, web, developer"
/>

<!-- Schema Markup -->
<script type="application/ld+json" is:inline>
    {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Victorino Lavida",
        "jobTitle": "Web Developer",
        "url": {SITE_URL},
        "sameAs": [
            "https://github.com/Victorinolavida/"
            "https://www.linkedin.com/in/victorino-ruiz/"
        ],
        "worksFor": {
            "@type": "Organization",
            "name": "Cicada"
        },
        "alumniOf": {
            "@type": "CollegeOrUniversity",
            "name": "Universidad Autónoma de México"
        }
    }
</script>
