---
interface Props {
    href: string
    caption: string
}
const { href, caption } = Astro.props
---

<figure>
    <img class="icon" src={href} />
    <figcaption>{caption}</figcaption>
</figure>

<style>
    .icon {
        width: 2em;
        height: 2em;
    }
    figure {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        max-width: 2rem;
        max-height: 5rem;
    }

    figcaption {
        text-align: center;
    }
</style>
